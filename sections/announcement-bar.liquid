{% liquid
  assign has_slider = false
  if section.settings.enable_slider and section.blocks != blank
    assign has_slider = true
  endif
%}
{%- if has_slider -%}
  <script src="{{ 'announcement.js' | asset_url }}" defer></script>
{%- endif -%}

<style>
  :root {
    --announcement-height: {{ section.settings.height_mobile }}px;
  }

  @media screen and (min-width: 765px) {
    :root {
      --announcement-height: {{ section.settings.height }}px;
    }
  }
</style>

{% style %}
  {% render 'section-margin' %}
{% endstyle %}

<div
  class="announcement-bar{% if has_slider %} announcement-bar--swiper swiper{% endif %}"
  role="region"
  aria-label="{{ 'sections.header.announcement' | t }}"
  data-rows="{{ section.settings.rows_count }}"
  data-rows-mobile="{{ section.settings.rows_count_mobile }}"
  data-delay="{{ section.settings.slide_duration | times: 1000 }}"
  data-speed="{{ section.settings.speed | times: 1000 }}"
>
  <div class="announcement-bar__wrapper{% if has_slider %} swiper-wrapper announcement-bar__wrapper--{{ section.settings.rows_count }} announcement-bar__wrapper--{{ section.settings.rows_count_mobile }}-mobile{% endif %}">
    {%- if section.settings.text != blank -%}
      <div class="announcement-bar__message color-{{ section.settings.color_scheme }} background{% if has_slider %} swiper-slide{% endif %}">
        <div class="announcement-bar__message-wrapper">
          {%- if section.settings.icon != 'none' -%}
            <div
              class="announcement-bar__icon announcement-bar__icon--{{- section.settings.icon_style }} announcement-bar__icon--{{- section.settings.icon_fill_type }} color-{{ section.settings.icon_color_scheme }}"
            >
              <i
                class="icon icon-pack icon-{{ section.settings.icon }} {% if section.settings.icon_style == 'colored' and section.settings.icon_fill_type == 'gradient' %} text-gradient {% endif %}"
              ></i>
            </div>
          {%- endif -%}
          <div class="announcement-bar__text">{{- section.settings.text -}}</div>
        </div>
      </div>
    {%- endif -%}
    {%- for block in section.blocks -%}
      {%- if block.settings.text != blank -%}
        <div
          class="announcement-bar__message color-{{ block.settings.color_scheme }} background{% if has_slider %} swiper-slide{% endif %}"
          {{ block.shopify_attributes }}
        >
          <div class="announcement-bar__message-wrapper">
            {%- if block.settings.icon != 'none' -%}
              <div
                class="announcement-bar__icon announcement-bar__icon--{{- block.settings.icon_style }} announcement-bar__icon--{{- block.settings.icon_fill_type }} color-{{ block.settings.icon_color_scheme }}"
              >
                <i
                  class="icon icon-pack icon-{{ block.settings.icon }} {% if block.settings.icon_style == 'colored' and block.settings.icon_fill_type == 'gradient' %} text-gradient {% endif %}"
                ></i>
              </div>
            {%- endif -%}
            <div class="announcement-bar__text">{{- block.settings.text -}}</div>
          </div>
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>
</div>

