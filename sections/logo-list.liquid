        {% endif %}
      >
        {% if section.settings.layout == 'horizontal-carousel' %}<div class="swiper-wrapper">{% endif %}
        {%- for block in section.blocks -%}
          <div
            class="logo-list__item {% if section.settings.layout == 'horizontal-carousel' %}swiper-slide{% endif %}{% if block.settings.logo_link != blank %} logo-list__item--with-link{% endif %}"
            {{ block.shopify_attributes }}
          > 
            {%- assign height = block.settings.image_1.height -%}
            {%- assign width = block.settings.image_width -%}
            {%- assign sizes = '(min-width: 1100px) 750, (min-width: 750px) 550, 275' -%}
            {% capture style %}
              --width-adapt: {{ block.settings.image_width | times: 0.9 }}px
            {% endcapture %}

            {%- if block.settings.logo_link != blank -%}
              <a
                class="logo-list__item-link "
                href="{{ block.settings.logo_link }}"
                {% if settings.links_blank and block.settings.logo_link.type == "external_link" %}
                  target="_blank"
                {% endif %}
                >
                {%- if block.settings.image_2 != blank or block.settings.image_1 != blank -%}
                  {%- if block.settings.image_2 != blank -%}
                    {{
                      block.settings.image_2
                      | image_url: width: 710
                      | image_tag:
                        loading: 'lazy',
                        sizes: sizes,
                        widths: '275, 550, 750',
                        height: height,
                        width: width,
                        class: 'logo-list__image logo-list__image--dark',
                        style: style
                    }}
                  {%- endif -%}
                  {%- if block.settings.image_1 != blank -%}
                    {{
                      block.settings.image_1
                      | image_url: width: 710
                      | image_tag:
                        loading: 'lazy',
                        sizes: sizes,
                        widths: '275, 550, 750',
                        height: height,
                        width: width,
                        class: 'logo-list__image logo-list__image--light',
                        style: style
                    }}
                  {%- endif -%}
                {%- else -%}
                  <div class="logo-list__placeholder">{{ 'sections.logo-list.brand' | t }} {{ forloop.index }}</div>
                {%- endif -%}
              </a>
            {%- else -%}
              {%- if block.settings.image_2 != blank or block.settings.image_1 != blank -%}
                {%- if block.settings.image_2 != blank -%}
                  {{
                    block.settings.image_2
                    | image_url: width: 710
                    | image_tag:
                      loading: 'lazy',
                      sizes: sizes,
                      widths: '275, 550, 750',
                      height: height,
                      width: width,
                      class: 'logo-list__image logo-list__image--dark',
                      style: style
                  }}
                {%- endif -%}
                {%- if block.settings.image_1 != blank -%}
                  {{
                    block.settings.image_1
                    | image_url: width: 710
                    | image_tag:
                      loading: 'lazy',
                      sizes: sizes,
                      widths: '275, 550, 750',
                      height: height,
                      width: width,
                      class: 'logo-list__image logo-list__image--light',
                      style: style
                  }}
                {%- endif -%}
              {%- else -%}
                <div class="logo-list__placeholder">{{ 'sections.logo-list.brand' | t }} {{ forloop.index }}</div>
              {%- endif -%}
            {%- endif -%}
          </div>
        {% endfor %}
        {% if section.settings.layout == 'horizontal-carousel' %}</div>{% endif %}
      </div>
      {% if section.settings.layout != 'vertical-carousel' %}
        </div>
      {% endif %}
    {% endif %}
  </div>
</div>

