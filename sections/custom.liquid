{
  "name": "沉浸式滾動預覽",
  "settings": [
    {
      "type": "header",
      "content": "通用設定"
    },
    {
      "type": "range",
      "id": "item_display_duration",
      "min": 0.5,
      "max": 5.0,
      "step": 0.1,
      "unit": "s",
      "label": "每個產品穩定顯示秒數",
      "default": 1.0,
      "info": "設定每個產品內容在滾動預覽中停留的「穩定」時間 (秒)。"
    },
    {
      "type": "header",
      "content": "序幕設定 (COMING SOON)"
    },
    { "type": "text", "id": "prologue_title", "label": "序幕標題", "default": "COMING SOON" },
    { "type": "color", "id": "prologue_background_color", "label": "序幕背景顏色", "default": "#000000" },
    { "type": "color", "id": "prologue_text_color", "label": "序幕標題顏色", "default": "#FFFFFF" },
    { 
      "type": "header", 
      "content": "產品展示設定" 
    },
    { "type": "color", "id": "background_color", "label": "產品區塊背景顏色", "default": "#FFFFFF" },
    { "type": "color", "id": "title_color", "label": "標題顏色", "default": "#2d2d2f" },
    { "type": "color", "id": "subtitle_color", "label": "副標題顏色", "default": "#5b5b5f" },
    { 
      "type": "header", 
      "content": "品牌主色 (按鈕/輝光)" 
    },
    { "type": "color", "id": "brand_color", "label": "品牌主色", "default": "#2BB9ED" },
    { "type": "color", "id": "cta_text_color", "label": "按鈕文字顏色", "default": "#ffffff" },
    {
      "type": "header",
      "content": "多層次動態光暈顏色"
    },
    { "type": "color", "id": "aura_color_1", "label": "光暈顏色 1", "default": "#0077ff" },
    { "type": "color", "id": "aura_color_2", "label": "光暈顏色 2", "default": "#ff0077" },
    { "type": "color", "id": "aura_color_3", "label": "光暈顏色 3", "default": "#7700ff" }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "產品項目",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "產品圖片" },
        { "type": "header", "content": "內容設定" },
