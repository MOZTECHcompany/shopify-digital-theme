{{ 'section-hero.css' | asset_url | stylesheet_tag }}

{%- style -%}
	{% render 'section-padding' %}
{%- endstyle -%}

{%- liquid
	assign image_ratio = section.settings.image_ratio
-%}

{%- if image_ratio == 'adapt' and section.settings.image != blank -%}
	{% assign padding_bottom = 1
		| divided_by: section.settings.image.aspect_ratio
		| times: 100
		| round: 2
	%}
	{% style %}
		#Hero-{{ section.id }} .hero__image-inner::before {
			content: '';
			display: block;
			padding-bottom: {{ padding_bottom }}%;
		}

		#Hero-{{ section.id }} .hero__outer--overlay::before {
			content: '';
			display: block;
			padding-bottom: {{ padding_bottom }}%;
		}
	{% endstyle %}
{%- elsif image_ratio == 'adapt' and section.settings.video != blank -%}
	{% assign padding_bottom = 1
		| divided_by: section.settings.video.aspect_ratio
		| times: 100
		| round: 2
	%}
	<style>
		#Hero-{{ section.id }} .hero__image-inner::before {
			content: '';
			display: block;
			padding-bottom: {{ padding_bottom }}%;
		}

		#Hero-{{ section.id }} .hero__outer--overlay::before {
			content: '';
			display: block;
			padding-bottom: {{ padding_bottom }}%;
		}
	</style>
{% else %}
	{% liquid
		assign aspect_ratio = section.settings.image_ratio | split: '/'
		assign temp = aspect_ratio[0] | append: '.0'
		assign padding_bottom = aspect_ratio[1] | divided_by: temp | times: 100 | round: 2
	%}
	{% style %}
		#Hero-{{ section.id }} .hero__image-inner::before {
			content: '';
			display: block;
			padding-bottom: {{ padding_bottom }}%;
		}

		#Hero-{{ section.id }} .hero__outer--overlay::before {
			content: '';
			display: block;
			padding-bottom: {{ padding_bottom }}%;
		}
	{% endstyle %}
{%- endif -%}

{% if section.settings.overlay_opacity == 0 %}
	{% style %}
		[data-scheme="dark"] {
		  #Hero-{{ section.id }} .hero__overlay {
		    opacity: 0.4;
		  }
		}

		@media (prefers-color-scheme: dark) {
		  [data-scheme="auto"] {
		    #Hero-{{ section.id }} .hero__overlay {
		      opacity: 0.4;
		    }
		  }
		}
	{% endstyle %}
{% endif %}

