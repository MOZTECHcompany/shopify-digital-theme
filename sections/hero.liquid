	id='Hero-{{ section.id }}'
	class='hero section-{{ section.id }}-padding {% if section.settings.layout == 'overlay' and section.settings.header_overlay %} section--has-overlay {% if section.settings.header_transparent %} section--header-light {% endif %} {% endif %}'
>
	<div class='{% if section.settings.layout == 'overlay' %}{% if section.settings.full_screen == false %}container{% endif %}{% else %}container{% endif %}'>
		<div
			class='
				hero__outer hero__outer--{{ section.settings.layout }} {% if section.settings.layout == 'overlay' %}color-{{ section.settings.color_scheme }}{% endif %} {% if section.settings.layout == 'horizontal' %}hero__outer--{{ section.settings.block_type }}{% endif %}
				{% if section.settings.full_screen %} hero__outer--full {% endif %}
				{% if section.settings.desktop_image_position == 'before' %}hero__outer--desktop-order{% endif %}
				{% if section.settings.mobile_image_position == 'before' %}hero__outer--mobile-order{% endif %}
				{% if section.settings.layout == 'overlay' %}hero__outer--mobile-image-{{ section.settings.mobile_image_overlay }} {% endif %}
			'
		>
			<div
				class='
					hero__content {% if section.settings.layout == 'overlay' %}container{% endif %}
					{% if section.settings.layout == 'horizontal' or section.settings.layout == 'overlay' %}hero__content--{{ section.settings.vertical_alignment }}{% endif %}
					{% if section.settings.layout == 'vertical' or section.settings.layout == 'overlay' %}hero__content--{{ section.settings.horizontal_alignment }}{% endif %}
				'
			>
				{% for block in section.blocks %}
					{% case block.type %}
						{% when 'subtitle' %}
							<div
								class='hero__subtitle {{ block.settings.subheading_style }}'
								{{ block.shopify_attributes }}
							>
								{% if block.settings.subheading_icon != 'none' %}
									<i
										class='icon icon-pack icon-{{ block.settings.subheading_icon }}'
									></i>
								{% endif %}
								{{ block.settings.subheading }}
							</div>
