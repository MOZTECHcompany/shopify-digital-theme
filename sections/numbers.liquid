{{ 'section-numbers.css' | asset_url | stylesheet_tag }}
<script src="{{ 'numbers.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  {% render 'section-padding' %}
{%- endstyle -%}

{% liquid
  if section.settings.icon_size == 'recommended'
    if section.settings.layout == 'columns'
      if section.settings.block_type == 'plain'
        assign icon_size_rec = 'small'
      else
        assign icon_size_rec = 'large'
      endif
    elsif section.settings.layout == 'grid'
      assign icon_size_rec = 'normal'
    elsif section.settings.layout == 'slider'
      assign icon_size_rec = 'extra-large'
    endif
  else
    assign icon_size_rec = section.settings.icon_size
  endif

  if section.settings.number_size == 'recommended'
    if section.settings.layout == 'columns'
      assign number_size_rec = 'normal'
    elsif section.settings.layout == 'grid'
      assign number_size_rec = 'small'
    elsif section.settings.layout == 'slider'
      assign number_size_rec = 'large'
    endif
  else
    assign number_size_rec = section.settings.number_size
  endif

  if section.settings.card_heading_size == 'recommended'
    if section.settings.layout == 'columns'
      assign card_heading_rec = 'h5'
    elsif section.settings.layout == 'grid'
      assign card_heading_rec = 'h6'
    elsif section.settings.layout == 'slider'
      assign card_heading_rec = 'h4'
    endif
  else
    assign card_heading_rec = section.settings.card_heading_size
  endif
%}

<div class="numbers section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} background
  {% if section.settings.enable_border %} section-border {% if section.settings.border_full %} section-border-full {% endif %} {% endif %}">
  <div class="container">
    {% render 'section-text', section: section, class: 'numbers', text_align: section.settings.text_align, heading_level: section.settings.heading_level %}

    <div class="content numbers__outer">
      <div class="numbers__wrapper numbers__wrapper--{{ section.settings.layout }} {% if section.settings.layout == 'slider' %}swiper js-slider-numbers{% endif %} {% if section.settings.layout == 'columns' %}numbers__wrapper--{{ section.settings.columns_to_row }}{% endif %} numbers__wrapper--{{ section.settings.block_type }} numbers__wrapper--icon-{{ icon_size_rec }} numbers__wrapper--number-size-{{ number_size_rec }} {% if section.settings.layout == 'grid' %}numbers__wrapper--icon-first-{{ section.settings.icon_size_first }} numbers__wrapper--number-size-first-{{ section.settings.number_size_first }}{% endif %}">
        {% if section.settings.layout == 'slider' %}
          <div class="swiper-wrapper">
        {% endif %}

        {% for block in section.blocks %}
          <div
            class="numbers-card {% if section.settings.layout == 'slider' %}swiper-slide{% endif %}"
            {{ block.shopify_attributes }}
          >
            {% if block.settings.icon != 'none' %}
              <div class="numbers-card__icon numbers-card__icon--{{ block.settings.icon_color }} {% if block.settings.icon == 'none' and block.settings.image == blank %}numbers-card__icon--empty{% endif %}">
                <i class="icon icon-pack icon-{{ block.settings.icon }} {% if block.settings.icon_color == 'colored' and block.settings.icon_fill_type == 'gradient' %} text-gradient {% endif %}"></i>
              </div>
            {% endif %}

            {% if block.settings.number != blank %}
              <div
                data-content="{{ block.settings.number | escape }}"
                class="numbers-card__number numbers-card__number--colored"
              >
                <span class="odometer">
                  {{ block.settings.number }}
                </span>
              </div>
            {% endif %}

            {% if block.settings.heading != blank %}
              <h2 class="numbers-card__title {% if section.settings.layout == 'grid' and forloop.index == 1 %}{{ section.settings.card_heading_size_first }} {% else %} {{ card_heading_rec }} {% endif %}">
                {{ block.settings.heading }}
              </h2>
            {% endif %}

            {% if block.settings.description != blank %}
              <div class="numbers-card__description {% if section.settings.layout == 'slider' or section.settings.layout == 'grid' and forloop.index == 1 %}body-large{% endif %}">
                {{- block.settings.description -}}
              </div>
            {% endif %}

            {%- if block.settings.show_button -%}
              {% render 'button', link: block.settings.button_link, label: block.settings.button_label, style: 'simple', 'numbers-card' %}
            {%- endif -%}
          </div>
        {% endfor %}

        {% if section.settings.layout == 'slider' %}
          </div>
        {% endif %}
      </div>
      {% if section.settings.layout == 'slider' %}
        <div class="numbers__pagination swiper-pagination"></div>
        <div class="numbers__navigation swiper-navigation no-js-hidden">
          <div class="numbers__button-prev swiper-button-prev">
            {% render 'icon-caret-left' %}
          </div>
          <div class="numbers__button-next swiper-button-next">
            {% render 'icon-caret-right' %}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

